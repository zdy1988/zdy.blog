//update index

.post-index .group-picture{
    margin: -3px;
}

.post-index .group-picture-container{
    padding: 3px 0;
}

.post-index .page-post-detail .post-body .group-picture-column img{
    padding-bottom: 0 !important;
}

.page-post-detail .post-body .group-picture-column img{
    margin-bottom: 1.8em;
}

.post-index .post-body .group-picture-row:first-child{
     margin-bottom: 0 !important;
}

.post-body .group-picture-row:first-child{
    margin-bottom: -1.2em;
}

.site-meta .site-title{
    font-weight: normal;
}

@media (max-width: 767px)
{
	.menu .menu-item a {
		padding: 6px 10px;
	}

	.main-inner {
		margin-top: 140px;
	}

	.header {
		position: fixed;
		top: 0;
		width: 100%;
		z-index: 5000;
	}

	.header-inner {
		margin-bottom: 0px;
	}

	.page-archive .group-picture-row:first-child .group-picture-column{
		max-width: initial;
		max-height: initial;
	}
}